<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserTesting" parallel="tests" thread-count="4">
  
	<test name="TestOnChrome">
	 	<parameter name="browserName" value="chrome"></parameter>
	   <classes>
	     <class name="com.newsasia.scenarioone.ScenarioOne"/>
	   </classes>
	 </test>
  
	<test name="TestOnFirefox">
	  <parameter name="browserName" value="firefox"></parameter>
	    <classes>
	      <class name="com.newsasia.scenarioone.ScenarioOne"/>
	    </classes>
	  </test>
  
	 <test name="TestOnEdge">
	 <parameter name="browserName" value="edge"></parameter>
	   <classes>
	     <class name="com.newsasia.scenarioone.ScenarioOne"/>
	   </classes>
	 </test>
  
	 <test name="TestOnSafari">
	 <parameter name="browserName" value="Safari"></parameter>
	   <classes>
	     <class name="com.newsasia.scenarioone.ScenarioOne"/>
	   </classes>
	 </test>
  
</suite>
